
@{
    ViewBag.Title = "View Single Pending";
}

<br />
<h2 class="text-center">Viewing a Pending Approval Blog</h2>

<div class="row">
    <div class="container-fluid col-lg-10 col-md-10 col-sm-10 table-bordered">
        <h3>@Model.Blog.Title</h3>
        @Html.Raw(Model.Blog.Content)
        <br />
        @foreach (var tag in Model.Blog.SearchTags)
        {
            @(" #" + tag.SearchTagBody + " ");
        }
    </div>
</div>
<p class="text-center">@Html.ActionLink("Return to Blog List", "ViewPending", "Blog")</p>